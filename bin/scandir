#!/bin/bash
# 06.06.2014
# 10.12.2014
# v0.2

function usage(){
	echo "Usage: $0 scandir dir_for_logs"
	echo "$0 /home /var/log/scandir"
	exit 1
}

if [ $# -lt 2 ] || [ $1 = '--help' ]; then
	usage
fi

scandir="${1%/}"
log_base="${2%/}"

log_dir="${log_base}/$(date +%Y-%m-%d)"
mkdir -p "$log_dir"
> "$log_dir/scandir.log"

TIME=$(date +%s)
for dir in $(find "$scandir" -maxdepth 1 -mindepth 1 -type d | sort); do
	#echo scan $dir...
	TIME=$(date +%s)
	mkdir -p "$log_dir$dir"
	find "$dir" -type d > "$log_dir$dir/directories"
	find "$dir" > "$log_dir$dir/all"
	TIME2=$(($(date +%s) - $TIME))
	echo $TIME2 > "$log_dir$dir/time"

	# all
	out="$dir $(cat "$log_dir$dir/time") $(wc -l "$log_dir$dir/directories") $(wc -l "$log_dir$dir/all")"
	echo $out
	echo $out >> "$log_dir/scandir.log"
done
