#!/bin/bash
if [ $# != "2" ]; then
    echo 'Usage: $0 /path/to/sql.gz database'
    exit 1
fi

GZFILE="$1"
DBNAME="$2"

if [ ! -e "$GZFILE" ]; then
	echo >&2 "File $GZFILE not exists"
	exit 1
fi

if [ -L "$GZFILE" ]; then
	echo "$GZFILE is symlink to $(readlink -f "$GZFILE")"
	GZFILE="$(readlink -f "$GZFILE")"
fi

exists=$(mysql -Brs --execute="SHOW DATABASES LIKE '$DBNAME'" | grep -cx "$DBNAME")

if [ "$exists" = 1 ]; then
	echo dbdump $DBNAME
	dbdump "$DBNAME"

	echo DROP DATABASE $DBNAME
	mysql --execute="DROP DATABASE $DBNAME"
fi

echo CREATE DATABASE $DBNAME
mysql --execute="CREATE DATABASE $DBNAME"

echo "zcat $GZFILE | mysql $DBNAME"
if [ -z $(command -v pv) ]; then
	zcat "$GZFILE" | mysql "$DBNAME"
else
	size_compressed=$(stat --format="%s" "$GZFILE")
	size_uncompressed=$(zcat "$GZFILE" | wc -c)
	echo "Unrchive from $(( $size_compressed / 1048576 ))MB to $(( $size_uncompressed / 1048576 ))MB"
	zcat "$GZFILE" | pv --progress --size $size_uncompressed --name '  Importing.. ' | mysql "$DBNAME"
fi
